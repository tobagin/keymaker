# Keymaker Environment Variables
# Copy this file to .env and customize as needed

# Development mode (enables extra logging and debugging)
KEYMAKER_DEBUG=false

# Default SSH directory (defaults to ~/.ssh)
# KEYMAKER_SSH_DIR=~/.ssh

# Default key type (ed25519, rsa, ecdsa)
KEYMAKER_DEFAULT_KEY_TYPE=ed25519

# Default RSA key size in bits
KEYMAKER_DEFAULT_RSA_BITS=4096

# Enable verbose logging
KEYMAKER_VERBOSE=false

# Custom SSH command path (if not in PATH)
# KEYMAKER_SSH_KEYGEN_PATH=/usr/bin/ssh-keygen

# Custom ssh-copy-id command path (if not in PATH)
# KEYMAKER_SSH_COPY_ID_PATH=/usr/bin/ssh-copy-id

# Application theme (auto, light, dark)
KEYMAKER_THEME=auto

# Auto-refresh interval in seconds (0 to disable)
KEYMAKER_AUTO_REFRESH_INTERVAL=30